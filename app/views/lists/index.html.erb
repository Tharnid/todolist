<h1>ToDo List</h1>
		
<% @lists.each do |list|%>
		
		<h2><%= link_to "#{list.name}", list_url(list) %><h2>
			
		<h3><%= list.description %> - <%= link_to "Edit", edit_list_url(list) %> | <%= link_to "Delete", list_url(list), :method => :delete %><h3>
				
		<h4><%= list.notes %></h4>	
		
<% end%>

